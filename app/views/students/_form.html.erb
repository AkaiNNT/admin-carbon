<%= simple_form_for(@student, class: 'form-control') do |f| %>
  <%= f.error_notification %>
  <%= simple_fields_for @student.quiz_submissions.build do |q| %>
	  <%= q.input :school, collection: School.all.map{|n| [n.name, n.id]},input_html: { class: "form-control" } %>
	  <%= q.input :name, input_html: { class: "form-control" } %>
	  <%= q.input :class_name, input_html: { class: "form-control" }  %>
	  <%= q.input :level, collection: QuizSubmission.levels.keys.map{|r| [r.titleize, r]}, input_html: { class: "form-control" }  %>
	 <% end %>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>