<%#= render "admin/shared/flash_message" %>
<div class="card">  
  <div class="card-header bg-light">
    <div class="row">
      <div class="col-sm-6">
        <h4>School Listing</h4>
      </div>
      <div class="col-sm-6">
        <%= link_to new_admin_school_path, class: "float-right btn btn-primary" do %>
          <i class="fas fa-plus"></i> &nbsp;New School
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table display table-bordered table-hover" id="setDataTable" data-source="#{admin_schools_path(format: :json)}">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>School Name</th>
            <th>Number of students</th>
            <th>Created at</th>
            <th colspan="3"></th>            
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">
  jQuery(document).ready(function() {
    $('#setDataTable').dataTable({
      "processing": true,
      "serverSide": true,
      "ajax": $('#setDataTable').data('source'),
      "pagingType": "full_numbers",
      "responsive": true,
      "order": [[ 0, "desc" ]],
      "dom": '<"top"fip>rt<"bottom"ip><"clear">',
      "columns": [
        {"data": "id"},
        {"data": "name"},
        {"data": "number_of_students"},
        {"data": "created_at"},
        {"data": "action"}
      ],
      "oLanguage": { "sSearch": "Search: " },
      "columnDefs": [ 
        {
          "targets": 4,
          "orderable": false
        } 
      ]
    });
  });
</script>